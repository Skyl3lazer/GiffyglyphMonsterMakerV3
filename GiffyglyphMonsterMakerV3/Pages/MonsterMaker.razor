    public void TraverseFolders(Folder root)
    {
        Queue<Folder> traverseOrder = new Queue<Folder>();

        Queue<Folder> Q = new Queue<Folder>();
        HashSet<Folder> S = new HashSet<Folder>();
        Q.Enqueue(root);
        S.Add(root);

        while (Q.Count > 0)
        {
            Folder e = Q.Dequeue();
